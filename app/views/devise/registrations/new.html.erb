<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, class: "name" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: "email" %>
  </div>

  <div class="field">
    <%= f.label :postal_code %><br />
    <%= f.text_field :postal_code, class: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :prefecture_code %><br />
    <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, {}, class: "prefecture_code" %>
  </div>

  <div class="field">
    <%= f.label :state %><br />
    <%= f.text_field :state, class: "state" %>
  </div>

  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city, class: "city" %>
  </div>

  <div class="field">
    <%= f.label :street %><br />
    <%= f.text_field :street, class: "street" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "password_confirm" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" ,class: 'btn btn-success' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<script>
$(function() {
  $('#user_postal_code').jpostal({
    postcode : [
      '#user_postal_code'
    ],
    address : {
      '#user_prefecture_code'  : '%3',
      '#user_state'  : '%4',
      '#user_city'  : '%5'
    }
  });
});
</script>